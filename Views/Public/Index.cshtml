@model List<ComputerAvailabilityViewModel>

<h2>Datorer Tillgänglighet just nu</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Plats</th>
            <th>Status</th>
            <th>Detaljer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Location</td>
                <td>
                    @if (!c.IsAvailableNow && !c.IsAvailable) {
    <span class="badge bg-warning text-dark">Avstängd</span>
}
else if (!c.IsAvailableNow) {
    <span class="badge bg-danger">Upptagen</span>
}
else {
    <span class="badge bg-success">Tillgänglig</span>
}
                </td>
                <td>
                    <a asp-controller="Public" asp-action="Details" asp-route-id="@c.Id">Visa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-primary"
       asp-area="Identity" asp-page="/Account/Login">
       Logga in för att boka
    </a>
}
