@model Booking

@{
    ViewData["Title"] = "Ta bort bokning";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="alert alert-warning" role="alert">
    Är du säker på att du vill ta bort denna bokning? Detta går inte att ångra.
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Dator</dt>
            <dd class="col-sm-9">@Model.Computer?.Name</dd>

            <dt class="col-sm-3">Start</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Slut</dt>
            <dd class="col-sm-9">@Model.EndTime.ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Ta bort</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Avbryt</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
