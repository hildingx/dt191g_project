@* Redigerar bokning. Datorlista kan innehålla ”avstängd” nuvarande dator med varning *@
@model Booking

@{
    ViewData["Title"] = "Redigera bokning";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="ComputerId" class="form-label"></label>
                <select asp-for="ComputerId" class="form-select" asp-items="ViewBag.ComputerSelectList"></select>
                @if (ViewBag.ComputerWarning != null)
                {
                    <div class="form-text text-warning">@ViewBag.ComputerWarning</div>
                }
                <span asp-validation-for="ComputerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndTime" class="form-label"></label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Spara</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Avbryt</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
