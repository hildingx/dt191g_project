@* Visar kommande bokningar för inloggad användare *@
@model Booking
@{
    ViewData["Title"] = "Detaljer";
}

<h1 class="mt-4">Bokningsdetaljer</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Dator</dt>
    <dd class="col-sm-9">
    @if (Model.Computer?.IsAvailable == false)
    {
        <span class="text-warning fw-bold">@Model.Computer.Name (Avstängd)</span>
    }
    else
    {
        @Model.Computer?.Name
    }
</dd>

    <dt class="col-sm-3">Start</dt>
    <dd class="col-sm-9">@Model.StartTime.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">Slut</dt>
    <dd class="col-sm-9">@Model.EndTime.ToString("yyyy-MM-dd HH:mm")</dd>

    @if (User.IsInRole("Admin"))
    {
        <dt class="col-sm-3">Användare</dt>
        <dd class="col-sm-9">@Model.User?.Email</dd>
    }
</dl>

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Tillbaka</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Redigera</a>
</div>
