@* Visar kommande bokningar för inloggad användare *@
@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Mina bokningar";
}

<h1 class="page-title mt-4 mb-4 text-center">@ViewData["Title"]</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">Ny bokning</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Computer)</th>
                <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Computer?.Name</td>
                    <td>@item.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Redigera</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
