@model Computer

@{
    ViewData["Title"] = "Ta bort dator";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<h3 class="text-center text-danger mb-4">Är du säker på att du vill ta bort denna dator?</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Namn</dt>
            <dd class="col-sm-9">@Model?.Name</dd>

            <dt class="col-sm-3">Plats</dt>
            <dd class="col-sm-9">@Model?.Location</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model?.IsAvailable == true)
                {
                    <span class="badge bg-success">Aktiv</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Avstängd</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Avbryt</a>
</form>
