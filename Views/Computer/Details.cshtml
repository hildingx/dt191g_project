@model Computer

@{
    ViewData["Title"] = "Detaljer";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h2 class="h5 mb-3">Dator</h2>
        <dl class="row mb-0">
            <dt class="col-sm-3">Namn</dt>
            <dd class="col-sm-9">@Model?.Name</dd>

            <dt class="col-sm-3">Plats</dt>
            <dd class="col-sm-9">@Model?.Location</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model?.IsAvailable == true)
                {
                    <span class="badge bg-success">Aktiv</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Avst√§ngd</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Redigera</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka</a>
</div>
