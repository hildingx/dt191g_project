@* Adminöversikt av alla datorer med hanteringslänkar *@
@model IEnumerable<Computer>

@{
    ViewData["Title"] = "Datorer";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">Ny dator</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>Status</th>
                <th style="width:220px;">Åtgärder</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Aktiv</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Avstängd</span>
                    }
                </td>
                <td>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id">Redigera</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
