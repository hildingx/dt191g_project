@model Computer

@{
    ViewData["Title"] = "Lägg till dator";
}

<h1 class="page-title mt-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Namn</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label">Plats</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="IsAvailable" />
                <label class="form-check-label" asp-for="IsAvailable">Tillgänglig</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Spara</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Avbryt</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
