@page
@model LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<h1 class="page-title mt-5 mb-4">@ViewData["Title"]</h1>


<div class="row g-5">
    <div class="col-md-5 col-lg-4">
        <section>
            <form id="account" method="post">
                <h2 class="h5">Logga in med ditt konto</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="namn@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-post</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Lösenord" />
                    <label asp-for="Input.Password" class="form-label">Lösenord</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logga in</button>

                <div class="mt-3">
                    <p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a>
                    </p>
                    <p class="mb-1">
                        Ny här? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Skapa konto</a>
                    </p>
                    <p class="mb-0">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka bekräftelsemail igen</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-7">
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <section>
                <h3 class="h5">Logga in med en extern tjänst</h3>
                <hr />
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2 d-md-block">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary me-2 mb-2"
                                    name="provider" value="@provider.Name"
                                    title="Logga in med @provider.DisplayName">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </section>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
